@using (Html.BeginForm("Filter", "Laptop", FormMethod.Get))
{
    <div class="form-group">
        <label for="name">Tên laptop:</label>
        <input type="text" name="name" id="name" class="form-control" />
    </div>

    <div class="form-group">
        <label for="from">Giá từ:</label>
        <input type="number" name="from" id="from" class="form-control" />
    </div>

    <div class="form-group">
        <label for="to">Giá đến:</label>
        <input type="number" name="to" id="to" class="form-control" />
    </div>

    <div class="form-group">
        <label for="sortBy">Sắp xếp theo:</label>
        <select name="sortBy" id="sortBy" class="form-control">
            <option value="TenLaptop_asc">Tên tăng dần</option>
            <option value="TenLaptop_desc">Tên giảm dần</option>
            <option value="Gia_asc">Giá tăng dần</option>
            <option value="Gia_desc">Giá giảm dần</option>

        </select>
    </div>

    <button type="submit" class="btn btn-primary">Lọc</button>
}
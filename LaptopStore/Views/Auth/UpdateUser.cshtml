@{
    Layout = "~/Views/Shared/_Adminlayout.cshtml";
    ViewData["Title"] = "Admin - User - Update";
}

@model User
<section class="container mb-2 pb-4">
    <form asp-action="SaveUpdateUser" asp-controller="Auth" method="post" enctype="multipart/form-data" class="py-2 my-2">
        <input type="hidden" asp-for="Id" value="@Model.Id" />
        <div class="form-group">
            <label asp-for="UserName">Tên người dùng:</label>
            <input asp-for="UserName" class="form-control" required value="@Model.UserName">
        </div>
        <div class="form-group">
            <label asp-for="FirstName">Họ:</label>
            <input asp-for="FirstName" class="form-control" required value="@Model.FirstName">
        </div>
        <div class="form-group">
            <label asp-for="LastName">Tên:</label>
            <input asp-for="LastName" class="form-control" required value="@Model.LastName">
        </div>
        <div class="form-group">
            <label asp-for="BirthDay">Ngày sinh:</label>
            <input asp-for="BirthDay" type="date" class="form-control" required value="@Model.BirthDay.ToString("yyyy-MM-dd")">
        </div>
        <div class="form-group">
            <label asp-for="Address">Địa chỉ:</label>
            <input asp-for="Address" class="form-control" required value="@Model.Address">
        </div>
        <div class="form-group">
            <label asp-for="Age">Tuổi:</label>
            <input asp-for="Age" type="number" class="form-control" value="@Model.Age">
        </div>
        <div class="form-group">
            <label asp-for="Email">Email:</label>
            <input asp-for="Email" type="email" class="form-control" required value="@Model.Email">
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber">Số điện thoại:</label>
            <input asp-for="PhoneNumber" class="form-control" required value="@Model.PhoneNumber">
        </div>
        <div class="form-group">
            <label asp-for="Image">Ảnh:</label>
            <input asp-for="Image" type="file" class="form-control-file" required>
        </div>
        <button type="submit" class="btn btn-primary">Cập nhật người dùng</button>
    </form>
</section>
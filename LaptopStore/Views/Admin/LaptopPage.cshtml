@{
    Layout = "~/Views/Shared/_Adminlayout.cshtml";
    ViewData["Title"] = "Admin - Laptops ";
}
@model List<Laptop>
<section class="container">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Tên sản phẩm</th>
                <th>Đơn giá</th>
                <th>Số lượng tồn kho</th>
                <th>Ảnh minh họa</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var laptop in Model)
            {
                <tr>
                    <td>@Html.Raw(laptop.Name)</td>
                    <td>@laptop.Price</td>
                    <td>@laptop.Quantity</td>
                    <td><img src="http://localhost:4000/@laptop.ImgPath" alt="Laptop Image" style="width: 70px; height: 70px;"></td>
                    <td>
                        <button class="btn btn-primary btn-sm OrderBtn" value="@laptop.LaptopId">Đặt hàng</button>
                        <button class="btn btn-primary btn-sm deleteButton" value="@laptop.LaptopId">Xóa</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>